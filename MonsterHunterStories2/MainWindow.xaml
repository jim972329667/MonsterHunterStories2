                                            <Label Content="{x:Static prop:Resources.MainEquipmentTalismanSkill2}"/>
                                            <TextBox Text="{Binding Skill2, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                                            <Button Content="..." Click="ButtonChoiceTalismanSkill2_Click"/>
                                            <Label Content="{Binding Skill2, Converter={StaticResource TalismanSkillID2NameConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="{x:Static prop:Resources.MainTabItem}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="{x:Static prop:Resources.MainMenuCheckItem}" Click="ButtonCheckItem_Click" Margin="5,0"/>
                    <Button Grid.Column="1" Click="ButtonItemAllMax" Margin="5,0">
                        <TextBlock Text="{x:Static prop:Resources.MainItemAllMax}" TextWrapping="Wrap"/>
                    </Button>
                    <Button Grid.Column="2" Content="{x:Static prop:Resources.MainItemDelete}" Click="ButtonItemDel_Click" Margin="5,0"/>
                    <DockPanel Grid.Row="1" Grid.ColumnSpan="3">
                        <Button DockPanel.Dock="Bottom" Content="{x:Static prop:Resources.MainItemAppend}" Click="ButtonChoiceItem_Click"/>
                        <ListBox x:Name="ListBoxItem" ItemsSource="{Binding Items}" SelectionMode="Extended">
                            <ListBox.Resources>
                                <local:ItemID2NameConverter x:Key="ItemID2NameConverter"/>
                                <local:ItemID2DescriptionConcerter x:Key="ItemID2DescriptionConcerter"/>
                            </ListBox.Resources>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Count"/>
                                        <TextBox Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                                        <Label Margin="5,0,0,0" Content=" Name"/>
                                        <TextBlock Margin="5,0,0,0" Text="{Binding ID, Converter={StaticResource ItemID2NameConverter}}" TextWrapping="Wrap" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Margin="10,0,0,0" Text="{Binding ID, Converter={StaticResource ItemID2DescriptionConcerter}}" TextWrapping="Wrap" Width="450" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static prop:Resources.MainTabDen}">
                <DockPanel>
                    <Button DockPanel.Dock="Bottom" Content="{x:Static prop:Resources.MainDenAllQuality}" Click="ButtonBaseAllDenQuality"/>
                    <ListBox x:Name="ListBoxItem1" ItemsSource="{Binding Dens}">
                        <ListBox.Resources>
                            <local:DenVisibleConverter x:Key="DenVisibleConverter"/>
                            <local:DenType2NameConverter x:Key="DenType2NameConverter"/>
                        </ListBox.Resources>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{x:Static prop:Resources.MainDenLocationID}"/>
                                    <TextBlock Text="{Binding LocationID}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" Width="40"/>
                                    <Label Margin="10,0,0,0" Content="{x:Static prop:Resources.MainMonsterType}"/>
                                    <TextBlock Text="{Binding Type, Converter={StaticResource DenType2NameConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80"/>
                                    <Label Margin="10,0,0,0" Content="{x:Static prop:Resources.MainDenRank}"/>
                                    <ComboBox SelectedIndex="{Binding Rank}" Margin="10,0,0,0" Width="90">
                                        <ComboBoxItem Content="Low Rank"/>
                                        <ComboBoxItem Content="High Rank "/>
                                    </ComboBox>
                                    <Label Margin="10,0,0,0" Content="{x:Static prop:Resources.MainEquipmentTalismanRarity}" Visibility="{Binding Type, Converter={StaticResource DenVisibleConverter}}"/>
                                    <ComboBox SelectedIndex="{Binding Rarity}" Visibility="{Binding Type, Converter={StaticResource DenVisibleConverter}}" Margin="10,0,0,0">
                                        <ComboBoxItem Content="Common"/>
                                        <ComboBoxItem Content="Rare"/>
                                        <ComboBoxItem Content="Super Rare"/>
                                    </ComboBox>                                 
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
