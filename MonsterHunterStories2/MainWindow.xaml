<Window x:Class="MonsterHunterStories2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonsterHunterStories2"
        xmlns:prop="clr-namespace:MonsterHunterStories2.Properties"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True" Drop="Window_Drop" PreviewDragOver="Window_PreviewDragOver"
        Closed="Window_Closed"
        Title="{x:Static prop:Resources.ApplicationTitle}" Height="590" Width="900">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BitmapImage x:Key="Open" UriSource="./resource/Open.png"/>
        <BitmapImage x:Key="Save" UriSource="./resource/Save.png"/>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{x:Static prop:Resources.MainMenuFile}">
                <MenuItem Header="{x:Static prop:Resources.MainMenuFileOpen}" Click="MenuItemFileOpen_Click"/>
                <MenuItem Header="{x:Static prop:Resources.MainMenuFileSave}" Click="MenuItemFileSave_Click"/>
                <MenuItem Header="{x:Static prop:Resources.MainMenuFileSaveAs}" Click="MenuItemFileSaveAs_Click"/>
                <Separator/>
                <MenuItem Header="{x:Static prop:Resources.MainMenuFileExit}" Click="MenuItemFileExit_Click"/>
            </MenuItem>
            <MenuItem Header="{x:Static prop:Resources.MainMenuAbout}" Click="MenuItemAbout_Click" Margin="10,0,0,0"/>
            <MenuItem Header="{x:Static prop:Resources.MainMenuUpdateDB}" Click="MenuAddDB_Click" Margin="10,0,0,0"/>
        </Menu>
        <ToolBar DockPanel.Dock="Top">
            <Button Height="32" ToolTip="Open" Click="MenuItemFileOpen_Click">
                <Image Source="{StaticResource Open}"/>
            </Button>
            <Button Height="32" ToolTip="Save" Click="MenuItemFileSave_Click">
                <Image Source="{StaticResource Save}"/>
            </Button>
            <ComboBox x:Name="LanguageBox" Margin="10,0,0,0" SelectedIndex="{Binding Path=Langage, Source={x:Static prop:Settings.Default}}" Width="80">
                <ComboBoxItem Content="Japanese"/>
                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="Korean"/>
                <ComboBoxItem Content="中文"/>
                <ComboBoxItem Content="繁體中文"/>
                <ComboBoxItem Content="French"/>
            </ComboBox>
            <!--<CheckBox Margin="10,0,0,0" IsChecked="{Binding Path=PCConfirm, Source={x:Static prop:Settings.Default}}" VerticalAlignment="Center"  BorderBrush="#FFFE0000">
                <Label Content="PC?" VerticalAlignment="Center"/>
            </CheckBox>-->
            <Label Margin="10,0,0,0" Content="{x:Static prop:Resources.MainMenuSaveforConvert}" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <ComboBox SelectedIndex="{Binding SaveConvert}">
                <ComboBoxItem Content="Switch"/>
                <ComboBoxItem Content="PC"/>
            </ComboBox>
            <!--<Button Content="111" Click="Button111"/>-->
        </ToolBar>
